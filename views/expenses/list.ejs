<%- include('../partials/header') %>

<div class="content-container">
    <div class="content-header">
        <h1>Expenses</h1>
        <a href="/expenses/add" class="btn btn-primary">Add Expense</a>
    </div>
    
    <% if(expenses.length > 0) { %>
        <table class="data-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% expenses.forEach(expense => { %>
                    <tr>
                        <td><%= moment(expense.date).format('MM/DD/YYYY') %></td>
                        <td><%= expense.category_name %></td>
                        <td><%= expense.description || 'N/A' %></td>
                        <td class="amount">$<%= parseFloat(expense.amount).toFixed(2) %></td>
                        <td class="actions">
                            <a href="/expenses/edit/<%= expense.id %>" class="btn-small">Edit</a>
                            <form action="/expenses/delete/<%= expense.id %>" method="POST" class="inline-form">
                                <button type="submit" class="btn-small btn-danger" onclick="return confirm('Are you sure you want to delete this expense?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <div class="empty-state">
            <p>No expenses found. Start by adding a new expense.</p>
            <a href="/expenses/add" class="btn btn-primary">Add Expense</a>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>